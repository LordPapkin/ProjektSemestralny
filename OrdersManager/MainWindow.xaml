<Window x:Class="OrdersManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Orders" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="btnOrder" Content="Add new order" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnOrder_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Customers">
                <Grid x:Name="btn" Background="#FFE5E5E5">
                    <Button x:Name="btnOpenAddCustomer" Content="Add new customer info" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnOpenAddCustomer_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Suppliers">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Product">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
